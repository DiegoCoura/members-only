<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title></title>
  </head>
  <body>
    <div class="form-container">
      <form id="login-form" class="form-standard" action="/login" method="POST">
        <h1 class="text-center">Login</h1>
        <label for="username">Email:</label>
        <input id="username" name="username" placeholder="Email" type="text" />
        <% locals.errors && errors.find((err) => { %>
            <% if(err.path === 'username') { %>
              <span class="error-msg"><%=err.msg%></span>
              <%}%>
        <% }) %>

        <label for="password">Password:</label>
        <input id="password" name="password" type="password" />
        <% locals.errors && errors.find((err) => { %>
          <% if(err.path === 'password') { %>
            <span class="error-msg"><%=err.msg%></span>
            <%}%>
      <% }) %>
        <button class="blue-btn">Login</button>
        <strong class="text-center"
          >Don't have an account? <a href="/sign-up">Sign up</a></strong
        >
      </form>
    </div>
  </body>
</html>
